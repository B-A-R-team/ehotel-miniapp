/* components/ehotel-nav/ehotel-nav.wxss */
.nav-wrapper {
  position: relative;
  background-color: rgb(255, 192, 0);
  height: 40px;
}
.nav-wrapper .back-to-home {
  position: absolute;
  top: 0.5rem;
  left: 0.5rem;
  padding: 3px 3px;
  border: 1px solid #000;
  width: 4rem;
  background-color: rgb(255, 192, 0);
  font-size: 14px;
}

.nav-wrapper .nav-title {
  text-align: center;
  font-size: 20px;
  line-height: 40px;
}
