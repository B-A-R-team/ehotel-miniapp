/* 日历主要颜色相关样式 */
.default_week-color,
.default_handle-color {
  color: #000;
}

.default_color,
.default_weekend-color {
  color: #ffc000;
}

.default_today {
  color: #fff;
  background-color: #874fb4;
}

.default_choosed {
  color: #fff;
  background-color: #ffc000;
}

.default_date-disable {
  color: #c7c7c7;
}

.default_prev-month-date,
.default_next-month-date {
  color: #e2e2e2;
}

.default_normal-date {
  color: #000000;
}

.default_todo-circle {
  border-color: #88d2ac;
}

.default_todo-dot {
  background-color: #e54d42;
}

.default_date-desc {
  color: #c2c2c2;
}

.default_date-desc-lunar {
  color: #e54d42;
}

.default_date-desc-disable {
  color: #e2e2e2;
}
