/* pages/order-finish/order-finish.wxss */
.finish-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.finish-container > view {
  background-color: #fff;
  margin-top: 30rpx;
  box-shadow: 1px 1px 10rpx rgba(20, 20, 20, 0.1);
}

.finish-container > view text {
  display: block;
  font-weight: bold;
  border-bottom: 1px solid #e0e0e0;
  padding: 20rpx 1rem;
}

.finish-container > view > view {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 20rpx 1rem;
}

.finish-container > view > view > view:first-child {
  text-align: justify;
  text-align-last: justify;
  width: 4rem;
  margin-right: 1rem;
}

.finish-container > view > view > view:last-child {
  color: #686868;
}

.finish-container .payment > view {
  justify-content: space-between;
}

.finish-container .payment > view.money > view:last-child {
  font-size: 36rpx;
  color: #ffcc00;
}

.finish-container .remarks {
  text-align: center;
  margin-top: 2rem;
  margin-right: 1rem;
  color: #686868;
  background-color: #faf9f9;
  box-shadow: none;
}
