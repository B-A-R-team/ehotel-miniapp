/* pages/order/order.wxss */
.order-container {
  display: flex;
  width: 100vw;
  height: 100vh;
  background-color: #faf9f9;
}
.order-container .nav-bar {
  box-sizing: border-box;
  padding: 0 2rem;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  transition: all 0.3s;
  box-shadow: 1px 1px 5px rgba(77, 77, 77, 0.1);
}
.order-container .nav-bar > view {
  height: 100%;
}
.order-container .nav-bar .active {
  color: #ffcc00;
  border-bottom: 1px solid #ffcc00;
  transition: all 0.3s;
}
