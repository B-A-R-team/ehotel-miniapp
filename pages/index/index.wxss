/**index.wxss**/
.home-container {
  width: 750rpx;
}
.home-container swiper,
.home-container swiper-item,
.home-container swiper image {
  width: 100%;
  height: 150px;
}

.home-container .search-wrapper {
  margin: 0 10vw;
  padding: 10px 0;
  width: 80vw;
  /* height: 5rem; */
  background-color: #fff;
  box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.home-container .search-wrapper .search-date {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
